<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@drawable/custom_border_cover"
        android:layout_marginTop="10dp"
        android:paddingTop="5dp"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:id="@+id/imgAvatarNewsFeed"
                android:layout_marginLeft="25dp"
                android:layout_width="42dp"
                android:layout_height="42dp" />

            <LinearLayout
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/imgAvatarNewsFeed"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="#252424"
                    android:layout_marginTop="4dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:text="user name"
                    android:layout_toRightOf="@+id/imgAvatarNewsFeed"
                    android:id="@+id/tvUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_centerInParent="true"
                android:text="status"
                android:textColor="#313131"
                android:textSize="18sp"
                android:id="@+id/tvContentPost"
                android:padding="5dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="20dp">
                <TextView
                    android:textColor="#313131"
                    android:id="@+id/tvNumberLike"
                    android:layout_marginLeft="10dp"
                    android:textSize="12sp"
                    android:text="Like: "
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textColor="#313131"
                    android:id="@+id/tvNumberComment"
                    android:layout_marginLeft="10dp"
                    android:textSize="12sp"
                    android:text="Comment:"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout

                android:visibility="visible"
                android:id="@+id/wrap_comment"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="45dp">

                    <Button
                        android:id="@+id/btnLike"
                        android:layout_centerInParent="true"
                        android:textAllCaps="false"
                        android:textSize="12sp"
                        android:text="Like"
                        android:layout_width="90dp"
                        android:layout_height="40dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="45dp">

                    <Button
                        android:id="@+id/btnComment"
                        android:layout_centerInParent="true"
                        android:textAllCaps="false"
                        android:textSize="12sp"
                        android:text="Comment"
                        android:layout_width="90dp"
                        android:layout_height="40dp" />

                </RelativeLayout>


            </LinearLayout>




            </LinearLayout>

        </LinearLayout>


</RelativeLayout>

